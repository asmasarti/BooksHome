<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".MainActivity"
    >


    <EditText
        android:id="@+id/username"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="157dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        android:background="#30F6F0F0"
        android:drawableStart="@drawable/ic_baseline_phone_24"
        android:ems="10"
        android:hint=" Numéro Téléphone"
        android:inputType="phone"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="#0B0A0A"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/motDePass"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="#1B0D00"
        android:textSize="20dp"
        android:textStyle="bold" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/loginbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/motDePass" />


    <TextView
        android:id="@+id/OubMotDpass"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="339dp"
        android:text="Mot de passe oublié?"
        android:textColor="#35363C"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/seconnecter"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="265dp"
        android:backgroundTint="#404043"
        android:text="Se connecter"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#C5C4C1"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="125dp"
        android:layout_height="112dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="1dp"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/sinscrir"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="201dp"
        android:backgroundTint="#404043"
        android:text="créer compte"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#C5C4C1"
        android:textSize="15dp"
        android:textStyle="bold" />


</RelativeLayout>